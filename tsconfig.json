{
    "compilerOptions": {
        "target": "ES2022",
        "jsx": "react-jsx",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["vite/client"],
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        /* Bundler mode */
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        /* Linting */
        "skipLibCheck": true,
        "noUncheckedSideEffectImports": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "eslint.config.js",
        "prettier.config.js",
        "vite.config.js"
    ]
}
